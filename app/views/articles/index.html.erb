<div class="card">
    <div class="card-header">
        <div class="float-left">Listing Articles</div>

        <div class="float-right">
            <%= link_to 'New article', new_article_path, class: "btn btn-primary btn-sm" %>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>Title</th>
                <th>Text</th>
                <th>Action</th>
            </tr>

            <% @articles.each do |article| %>
                <tr>
                    <td>
                        <%= article.title %>
                    </td>
                    <td>
                        <%= article.text %>
                    </td>
                    <td>
                        <%= link_to 'Show', article_path(article) %> | 
                        <%= link_to 'Edit', edit_article_path(article) %> |
                        <%= link_to 'Remove', article_path(article),
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %>
                    </td>
                </tr>
                <% end %>
        </table>
    </div>
</div>